<%= form_with model: post, url: posts_path, method: :post, local: true do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :body, "Description", class: "form-label" %>
    <%= form.text_area :body, class: "form-control", rows: 3 %>
  </div>

  <!-- Hidden field for drawing data -->
  <%= form.hidden_field :drawing_data, id: "post_drawing_data" %>
  
  <!-- Preview container -->
  <div class="form-group" id="drawing-preview"></div>

  <div class="form-actions">
    <%= form.submit "Post to Feed", class: "btn btn-primary" %>
    <button type="button" class="btn btn-secondary" onclick="document.getElementById('post-form-container').style.display='none'">Cancel</button>
  </div>
<% end %>