<%= form_with(model: [ @post, @comment ]) do |form| %>
    <div class="form-group">
      <%= form.label :body, "Your Comment" %> <!-- Use content here -->
      <%= form.text_area :body, class: "form-control", rows: 3 %> <!-- content instead of body -->
    </div>
    <%= form.submit "Submit", class: "btn btn-primary" %>
  <% end %>
  